@startuml
!theme plain
top to bottom direction
skinparam linetype ortho

'============== 颜色方案 =============='
skinparam class {
    BackgroundColor #FFCCCB      '实体
    BorderColor     #333333
}
skinparam interface {
    BackgroundColor #LightBlue   '属性
    BorderColor     #333333
}
skinparam abstract {
    BackgroundColor #LightGreen  '联系
    BorderColor     #333333
}

'============== 实体（用空括号当成"类"来骗过语法） =============='
class "学校" {}
class "用户" {}
class "学期" {}
class "课程" {}
class "教学班级" {}
class "选课" {}
class "帖子" {}
class "评论" {}
class "仿真记录" {}
class "题库" {}
class "测试成绩" {}
class "基地投稿" {}

'============== 属性（用接口表示） =============='
interface "学校编号" {}
interface "学校名称" {}
interface "用户编号" {}
interface "账号" {}
interface "姓名" {}
interface "角色" {}
interface "学期编号" {}
interface "学期名" {}
interface "课程编号" {}
interface "课程名" {}
interface "班级编号" {}
interface "班级名" {}
interface "邀请码" {}
interface "帖子编号" {}
interface "标题" {}
interface "内容" {}
interface "评论编号" {}
interface "仿真记录编号" {}
interface "学习时长(秒)" {}
interface "完成状态" {}
interface "题号" {}
interface "题目内容" {}
interface "正确答案" {}
interface "成绩编号" {}
interface "总分" {}
interface "通过状态" {}
interface "投稿编号" {}
interface "基地名称" {}
interface "提交时间" {}

'============== 联系（用抽象类表示） =============='
abstract "属于" {}
abstract "开设" {}
abstract "排课于" {}
abstract "授课" {}
abstract "选课关系" {}
abstract "发帖关系" {}
abstract "回帖关系" {}
abstract "提交仿真" {}
abstract "包含题库" {}
abstract "参加考试" {}
abstract "提交基地" {}

'============== 实体-属性 连线 =============='
"学校" --|> "学校编号"
"学校" --|> "学校名称"

"用户" --|> "用户编号"
"用户" --|> "账号"
"用户" --|> "姓名"
"用户" --|> "角色"

"学期" --|> "学期编号"
"学期" --|> "学期名"

"课程" --|> "课程编号"
"课程" --|> "课程名"

"教学班级" --|> "班级编号"
"教学班级" --|> "班级名"
"教学班级" --|> "邀请码"

"帖子" --|> "帖子编号"
"帖子" --|> "标题"
"帖子" --|> "内容"

"评论" --|> "评论编号"
"评论" --|> "内容"

"仿真记录" --|> "仿真记录编号"
"仿真记录" --|> "学习时长(秒)"
"仿真记录" --|> "完成状态"

"题库" --|> "题号"
"题库" --|> "题目内容"
"题库" --|> "正确答案"

"测试成绩" --|> "成绩编号"
"测试成绩" --|> "总分"
"测试成绩" --|> "通过状态"

"基地投稿" --|> "投稿编号"
"基地投稿" --|> "基地名称"
"基地投稿" --|> "提交时间"

'============== 实体-联系-实体 连线 =============='
"学校" -- "属于" : "1对多"
"属于" -- "用户" : "1对1"

"课程" -- "开设" : "1对1"
"开设" -- "教学班级" : "1对多"

"学期" -- "排课于" : "1对1"
"排课于" -- "教学班级" : "1对多"

"用户" -- "授课" : "1对1"
"授课" -- "教学班级" : "1对多"

"用户" -- "选课关系" : "多对多"
"选课关系" -- "教学班级" : "多对多"

"教学班级" -- "发帖关系" : "1对1"
"发帖关系" -- "帖子" : "1对多"

"用户" -- "发帖关系" : "1对1"
"发帖关系" -- "帖子" : "1对多"

"帖子" -- "回帖关系" : "1对1"
"回帖关系" -- "评论" : "1对多"

"用户" -- "回帖关系" : "1对1"
"回帖关系" -- "评论" : "1对多"

"用户" -- "提交仿真" : "1对1"
"提交仿真" -- "仿真记录" : "1对多"

"教学班级" -- "提交仿真" : "1对1"
"提交仿真" -- "仿真记录" : "1对多"

"课程" -- "包含题库" : "1对1"
"包含题库" -- "题库" : "1对多"

"用户" -- "参加考试" : "1对1"
"参加考试" -- "测试成绩" : "1对多"

"教学班级" -- "参加考试" : "1对1"
"参加考试" -- "测试成绩" : "1对多"

"用户" -- "提交基地" : "1对1"
"提交基地" -- "基地投稿" : "1对多"

"教学班级" -- "提交基地" : "1对1"
"提交基地" -- "基地投稿" : "1对多"

@enduml